<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".DetailsItem">


    <ImageView
        android:layout_width="100pt"
        android:layout_height="50pt"
        android:layout_marginLeft="50dp"
        android:id="@+id/img_item_photos"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="2000pt"
        android:layout_below="@id/img_item_photos"
        android:orientation="vertical">


        <TextView
            android:id="@+id/tv_item_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:text="@string/namabuah"
            android:textSize="20dp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/tv_item_function"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_item_name"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="50dp"
            android:text="Manfaatnya"
            android:textSize="16sp"

            />


    </RelativeLayout>




</RelativeLayout>